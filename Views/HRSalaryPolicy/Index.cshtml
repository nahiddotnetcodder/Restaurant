@{
    PagerModel pager = ViewBag.Pager;
}
<h6 style="color: #1275AE;">
    Human Resource (HR) > Maintenance > Salary Policy > Salary Policy Setup
</h6>
<hr />

<div class="card">
    <div class="card-header text-uppercase text-white text-center p-0" style="background:#21909F;">
        <p style="font-family: 'Brush Script'; font-size: 20px; padding: 5px;">Salary Policy Setup</p>
    </div>

    <div class="row mt-4">
        <div class="col-8 m-auto">
            <input id="hrspId" type="hidden" value="0" />
            <div class="form-group">
                <div class="row mb-2">
                    <div class="col-3"><label>Salary Policy Name</label></div>
                    <div class="col-9">
                        <input id="hrspName" type="text" class="form-control" required />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-3"><label>Add/Deduct</label></div>
                    <div class="col-9">
                        <select class="form-control autoSuggestionSelect" aria-label=".form-select-sm example" id="ddlAddDeduct" required></select>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-3"><label>Percentage/NonPercentage</label></div>
                    <div class="col-9">
                        <select class="form-control autoSuggestionSelect" aria-label=".form-select-sm example" id="ddlPerNonPer" required></select>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-3"><label>Percentage/NonPercentage</label></div>
                    <div class="col-9">
                        <input id="srsppercent" type="text" class="form-control" required />
                    </div>
                </div>
                <div class="row ">
                    <div class="col-3"></div>
                    <div class="col-9 text-end">
                        <div id="addNewItem">
                            <a id="addNewButton" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Add New</a>
                        </div>
                        <div id="updateExistingItem">
                            <a id="updateButton" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Update</a>
                            <a id="cancelButton" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Cancel</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="card-body table-responsive">
        @*<div class="row">
            <div class="col-12">
                <partial name="_topBar" model="@pager" />
            </div>
        </div>*@
        <table class="table table-sm table-striped table-bordered">
            <thead class="dark-mode">
                <tr style="background:#21909F;">
                    <th class="text-center" scope="col">Salary Policy Name</th>
                    <th class="text-center" scope="col"> Add/Deduct</th>
                    <th class="text-center" scope="col"> Percentage/NonPercentage</th>
                    <th class="text-center" scope="col"> Percentage/Non Percentage</th>
                    <th class="text-center" scope="col">Action</th>
                </tr>
            </thead>
            <tbody id="tSalaryPolicyListbody" class="text-center">
            </tbody>
        </table>
        <div class="row">
            <div class="col-12">
                <partial name="_bottomBar" model="@pager" />
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/hrSalaryPolicy.js"></script>
    <script>
        $('#srsppercent').keyup(function () {
            if ($(this).val() > 100) {
                alertify.error("Number Of Percentage above 100");
                $(this).val('100');
            }
        });

        $(document).ready(function () {
            getInitData();
            getAllSalaryPolicyClass();
            $("#addNewItem").show();
            $("#updateExistingItem").hide();
        });
    </script>
}