
@{
    PagerModel pager = ViewBag.Pager;
}
<h6 style="color: #1275AE;">
    Human Resource (HR) > Maintenance > Holidays > Holiday List
</h6>
<hr />

<div class="card">
    <div class="card-header text-uppercase text-white text-center p-0" style="background:#21909F;">
        <p style="font-family: 'Brush Script'; font-size: 20px; padding: 5px;">Holiday Setup</p>
    </div>
    <div class="row mt-4">
        <div class="col-8 m-auto">
            <input id="hrhId" type="hidden" value="0" />
            <div class="form-group">
                <div class="row mb-3">
                    <div class="col-3"><label>Holiday Type</label></div>
                    <div class="col-9">
                        <select class="form-control autoSuggestionSelect" aria-label=".form-select-sm example" id="ddlholidayType" required></select>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-3"><label>Start Date</label></div>
                    <div class="col-9">
                        <input id="hrhStartDate" type="date" class="form-control" required />
                        <input id="hrhStartDateString" type="text" class="form-control"  />
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-3"><label>End Date</label></div>
                    <div class="col-9">
                        <input id="hrhEndDate" type="date" class="form-control" required />
                        <input id="hrhEndDateString" type="text" class="form-control"  />
                    </div>
                </div>
                <div class="row ">
                    <div class="col-3"></div>
                    <div class="col-9 text-end">
                        <div id="addNewItem">
                            <a id="addNewButton" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Add New</a>
                        </div>
                        <div id="updateExistingItem">
                            <a id="updateButton" class="btn btn-primary"><i class="bi bi-plus-circle"></i>update</a>
                            <a id="cancelButton" class="btn btn-primary"><i class="bi bi-plus-circle"></i>cancel</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="card-body table-responsive">
        <table class="table table-sm table-striped table-bordered">
            <thead class="dark-mode">
                <tr style="background: #21909F;">
                    <th class="text-center" scope="col">Holiday Type</th>
                    <th class="text-center" scope="col">Start Date</th>
                    <th class="text-center" scope="col">End Date</th>
                    <th class="text-center" scope="col">Action</th>
                </tr>
            </thead>
            <tbody id="tHolidayListbody" class="text-center">
            </tbody>
        </table>
        <div class="row">
            <div class="col-12">
                <partial name="_bottomBar" model="@pager" />
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/hrHoliday.js"></script>
    <script>
        $(document).ready(function () {
            getInitData();
            getAllHolidayClass();
            resetValue();
        });
    </script>
}