@model RMS.Models.StoreSuppliers
@{

}
<h6 style="color: #1275AE; margin-top: 10px;">
    Store & Inventory > Maintenance > Store Suppliers > Edit Supplier
</h6>
<hr />

<div class="card">
    <div class="card-header text-uppercase text-white text-center p-0" style="background:#21909F;">
        <p style="font-family: 'Brush Script'; font-size: 20px; padding: 5px;">Store Supplier Setup</p>
    </div>
    <form asp-action="Edit" class="pt-4">
        <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>
        <input  type="hidden" asp-for="SSId"/>
        <div class="btn-group">
            <div class="col-md-10 m-auto">
                <div class="row">
                    <div class="form-group col-6">
                        <label asp-for="@Model.SSName" class="control-label"></label>
                        <input asp-for="@Model.SSName" class="form-control" />
                        <span asp-validation-for="@Model.SSName" class="text-danger"></span>

                    </div>
                    <div class="form-group col-6">
                        <label asp-for="@Model.SSSName" class="control-label"></label>
                        <input asp-for="@Model.SSSName" class="form-control" />
                        <span asp-validation-for="@Model.SSSName" class="text-danger"></span>

                    </div>
                    <div class="form-group col-6">
                        <label asp-for="@Model.SSOAdd" class="control-label"></label>
                        <input asp-for="@Model.SSOAdd" class="form-control" />
                        <span asp-validation-for="@Model.SSOAdd" class="text-danger"></span>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="@Model.SSCPerson" class="control-label"></label>
                        <input asp-for="@Model.SSCPerson" class="form-control" />
                        <span asp-validation-for="@Model.SSCPerson" class="text-danger"></span>
                    </div>

                    <div class="form-group col-6">
                        <label asp-for="@Model.SSCNumber" class="control-label"></label>
                        <input asp-for="@Model.SSCNumber" class="form-control" />
                        <span asp-validation-for="@Model.SSCNumber" class="text-danger"></span>

                    </div>
                    <div class="form-group col-6">
                        <label asp-for="@Model.SSEmail" class="control-label"></label>
                        <input asp-for="@Model.SSEmail" class="form-control" />
                        <span asp-validation-for="@Model.SSEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="@Model.SSBName" class="control-label"></label>
                        <input asp-for="@Model.SSBName" class="form-control" />
                        <span asp-validation-for="@Model.SSBName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="@Model.ACMId" class="control-label"></label>
                        <select asp-for="@Model.ACMId" class="form-control" asp-items="ViewBag.AccChartMaster"></select>
                        <span asp-validation-for="@Model.ACMId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="@Model.SSGNotes" class="control-label"></label>
                        @* <input asp-for="@Model.SSGNotes" class="form-control" />*@
                        <textarea asp-for="@Model.SSGNotes" class="form-control"></textarea>
                        <span asp-validation-for="@Model.SSGNotes" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group btn-group col-12 p-3">
                    <div class="col-2"></div>
                    <div class="col-4">
                        <input type="submit" value="Update" class="btn btn-primary btn-block" style="font-size: 18px;" />
                    </div>
                    <div class="col-4">
                        <a class="btn btn-secondary btn-block" asp-action="index" style="font-size: 18px;"
                           asp-route-pg="@TempData.Peek("CurrentPage")">Back</a>
                    </div>
                    <div class="col-2"></div>
                </div>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


}
